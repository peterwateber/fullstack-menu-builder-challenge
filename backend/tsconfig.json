{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2017",
        "module": "commonjs",
        "lib": ["es6"],
        "outDir": "build",
        "paths": {
            "*": ["node_modules/*"],
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": true, 
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
	"compileOnSave": false
}
